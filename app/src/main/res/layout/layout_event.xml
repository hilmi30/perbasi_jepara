<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_img_card"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title_desc"
            android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/event_gambar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:id="@+id/event_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_judul"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:maxLines="1"
                android:id="@+id/event_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_judul"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@id/title_desc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blackLine" />

        <TextView
            android:maxLines="1"
            android:id="@+id/event_tanggal"
            android:textStyle="bold"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:gravity="center"
            android:layout_below="@id/line"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_15_desember_2018"
            android:textSize="12sp" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:id="@+id/event_gambar"
            android:contentDescription="@string/gambar_news"
            android:layout_width="@dimen/height_img_card"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>